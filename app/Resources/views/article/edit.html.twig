{% extends 'base.html.twig' %}

{% block body %}
    <h1>Article edit</h1>

    {{ form_start(edit_form,{'attr':{'class':'form-horizontal'}}) }}
        {{ form_errors(edit_form) }}

        <div class="form-group">
            {{ form_label(edit_form.title,'标题',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
            {{ form_errors(edit_form.title) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.title,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(edit_form.keyword,'关键字',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
            {{ form_errors(edit_form.keyword) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.keyword) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(edit_form.body,'内容',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
            {{ form_errors(edit_form.body) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.body) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">提交</button>
            </div>
        </div>  

    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('article_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
