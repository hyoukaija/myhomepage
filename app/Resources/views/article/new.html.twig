{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-sm-offset-1">
        <h1>创建文章</h1>
    </div>
    


    
    {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.title,'标题',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
            {{ form_errors(form.title) }}
            <div class="col-sm-10">
                {{ form_widget(form.title,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.keyword,'关键字',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
            {{ form_errors(form.keyword) }}
            <div class="col-sm-10">
                {{ form_widget(form.keyword) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.body,'内容',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
            {{ form_errors(form.body) }}
            <div class="col-sm-10">
                {{ form_widget(form.body) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">提交</button>
            </div>
        </div>  

    {{ form_end(form) }}
    <ul>
        <li>
            <a href="{{ path('article_index') }}">回到列表</a>
        </li>
    </ul>

{% endblock %}


